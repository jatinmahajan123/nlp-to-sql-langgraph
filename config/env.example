# NLP to SQL Application Environment Variables

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# Google Gemini API Configuration (for embeddings)
GOOGLE_API_KEY=your_google_gemini_api_key_here

# JWT Secret Key for Authentication
SECRET_KEY=your_jwt_secret_key_here

# MongoDB Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=nlp_to_sql

# PostgreSQL Database Configuration (for data analysis)
DB_HOST=localhost  
DB_PORT=5432
DB_NAME=your_database_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# Langfuse Configuration (for AI Observability)
LANGFUSE_SECRET_KEY=sk-lf-your_secret_key_here
LANGFUSE_PUBLIC_KEY=pk-lf-your_public_key_here
LANGFUSE_HOST=https://cloud.langfuse.com

# Application Settings
DEBUG=False
ENVIRONMENT=development

# Optional: Custom settings
MAX_QUERY_RESULTS=1000
CACHE_ENABLED=true
SESSION_TIMEOUT_MINUTES=60 